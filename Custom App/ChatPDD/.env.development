# Development Environment Configuration
# This file contains development-specific settings

# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (Development)
DATABASE_URL=postgresql://username:password@localhost:5432/chatpdd_dev

# External APIs (Development/Sandbox)
CLIMATE_POLICY_RADAR_API_KEY=dev_api_key_here
CLIMATE_POLICY_RADAR_BASE_URL=https://api.climatepolicyradar.org/v1

# Feature Flags (Development)
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_MOCK_DATA=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# Logging (Development)
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true

# Analytics (Development - Disabled)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Security (Development)
NEXTAUTH_SECRET=dev_secret_key_change_in_production
NEXTAUTH_URL=http://localhost:3000

# Rate Limiting (Development - Relaxed)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# Cache (Development)
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=300

# Development Tools
NEXT_PUBLIC_VERCEL_ENV=development
NEXT_PUBLIC_MAINTENANCE_MODE=false
