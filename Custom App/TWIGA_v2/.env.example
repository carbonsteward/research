# 환경설정 예시 파일
# 실제 사용시 .env 파일에 실제 값들을 입력하세요

# 서버 설정
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# Vite 개발서버 설정
VITE_PORT=5173
VITE_HOST=localhost

# 데이터베이스 설정 - Neon PostgreSQL
DATABASE_URL=postgresql://username:password@host:port/database

# 또는 로컬 PostgreSQL 사용시
# DATABASE_URL=postgresql://postgres:password@localhost:5432/twiga_v2

# PostgreSQL 개별 설정 (Neon 사용시)
PGDATABASE=your_database_name
PGHOST=your_host
PGPORT=5432
PGUSER=your_username
PGPASSWORD=your_password

# Stripe 설정 (필요시)
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# JWT 시크릿 (보안을 위해 반드시 변경)
JWT_SECRET=your-super-secret-jwt-key-change-this

# 세션 시크릿 (보안을 위해 반드시 변경)
SESSION_SECRET=your-super-secret-session-key-change-this
